@model Planet
<h2>Add Planet</h2>
<form asp-action="Planet" class="col-5" method="post">
    <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="System"></span>
        <label asp-for="System"></label>
        <input asp-for="System" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Galaxy"></span>
        <label asp-for="Galaxy"></label>
        <input asp-for="Galaxy" class="form-control">
    </div>
    <input type="submit" value="Create Planet" class="btn">
</form>